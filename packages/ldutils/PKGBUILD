# Maintainer: Alejandro Valdes <alejandrovaldes@live.com>

pkgname=ldutils
pkgver=0.80
pkgrel=1
pkgdesc="Headers and link library for other ldutils projects."
arch=('x86_64')
url="https://gitlab.com/ldutils-projects/ldutils"
license=('GPLv2')
depends=('qt5-base' 'qt5-svg')
makedepends=('make')
source=("git+${url}.git#commit=0cbd142f5454997aa435aee8a83b33333db1300b")
sha256sums=('SKIP')

prepare() {
  mkdir -p build
  cd build
  qmake -o Makefile $srcdir/$pkgname/$pkgname.pro -spec linux-g++
}

build() {
  cd build
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
